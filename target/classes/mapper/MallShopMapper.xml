<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.treasurehunt.chat.mapper.MallShopMapper">

    <resultMap id="MallShopResultMap" type="com.treasurehunt.chat.domain.MallShopDO">
        <id property="id" column="id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="shopName" column="shop_name"/>
        <result property="shopStatus" column="shop_status"/>
        <result property="shopIcon" column="shop_icon"/>
        <result property="contactPhone" column="contact_phone"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, tenant_id, shop_name, shop_status, shop_icon, contact_phone, created_at, updated_at
    </sql>

    <!-- 自定义查询：根据租户ID查询店铺列表 -->
    <select id="selectByTenantId" parameterType="java.lang.Long" resultMap="MallShopResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mall_shop
        WHERE tenant_id = #{tenantId}
          AND shop_status = 'active'
        ORDER BY shop_name
    </select>

    <!-- 自定义查询：根据租户ID和状态查询店铺列表 -->
    <select id="selectByTenantIdAndStatus" resultMap="MallShopResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM mall_shop
        WHERE tenant_id = #{tenantId}
          AND shop_status = #{shopStatus}
        ORDER BY shop_name
    </select>

</mapper>

